{
  "name": "@o3r/build-helpers",
  "version": "0.0.0-placeholder",
  "description": "Build helpers",
  "type": "module",
  "private": true,
  "keywords": [
    "otter",
    "amadeus",
    "typescript"
  ],
  "files": [
    "scripts/*.mjs"
  ],
  "bin": {
    "cp-assets": "./scripts/cp-assets.mjs",
    "cp-build": "./scripts/cp-build.mjs",
    "cp-package-json": "./scripts/cp-package-json.mjs",
    "doc-links": "./scripts/doc-links.mjs",
    "generate-cjs-manifest": "./scripts/generate-cjs-manifest.mjs",
    "patch-package-json-exports": "./scripts/patch-package-json-exports.mjs",
    "patch-package-json-main": "./scripts/patch-package-json-main.mjs",
    "pr-labels": "./scripts/pr-labels.mjs",
    "prepare-doc-root-menu-template": "./scripts/prepare-doc-root-menu-template.mjs",
    "prepare-publish": "./scripts/prepare-publish.mjs",
    "update-doc-summary": "./scripts/update-doc-summary.mjs",
    "update-package": "./scripts/update-package.mjs"
  },
  "dependencies": {
    "globby": "^13.1.2",
    "minimist": "^1.2.6"
  },
  "peerDependencies": {
    "typescript": "~5.1.6"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "~16.3.0",
    "@nx/eslint-plugin": "~16.10.0",
    "@o3r/eslint-plugin": "workspace:^",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.42.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-jest": "~27.6.0",
    "eslint-plugin-jsdoc": "~46.10.0",
    "eslint-plugin-prefer-arrow": "~1.2.3",
    "eslint-plugin-unicorn": "^47.0.0",
    "nx": "~16.10.0",
    "typescript": "~5.1.6"
  },
  "otter": {
    "versionHarmonize": {
      "ignore": [
        "globby"
      ]
    }
  }
}
